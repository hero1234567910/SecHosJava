        <result property="rowId" column="row_id"/>
        <result property="rowGuid" column="row_guid"/>
        <result property="createTime" column="create_time"/>
        <result property="delFlag" column="del_flag"/>
        <result property="sortSq" column="sort_sq"/>
        <result property="repairName" column="repair_name"/>
        <result property="repairGuid" column="repair_guid"/>
        <result property="repairPhone" column="repair_phone"/>
        <result property="deviceName" column="device_name"/>
        <result property="devicePlace" column="device_place"/>
