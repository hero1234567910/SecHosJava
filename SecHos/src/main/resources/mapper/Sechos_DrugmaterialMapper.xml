<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.basic.javaframe.dao.Sechos_DrugmaterialDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.basic.javaframe.entity.Sechos_Drugmaterial" id="sechosDrugmaterialMap">
        <result property="rowId" column="row_id"/>
        <result property="rowGuid" column="row_guid"/>
        <result property="createTime" column="create_time"/>
        <result property="delFlag" column="del_flag"/>
        <result property="sortSq" column="sort_sq"/>
        <result property="drugName" column="drug_name"/>
        <result property="drugCode" column="drug_code"/>
        <result property="drugPrice" column="drug_price"/>
		<result property="drugShelfLife" column="drug_shelfLife"/>
		<result property="drugManufactureDate" column="drug_manufactureDate"/>
		<result property="drugExpirationDate" column="drug_expirationDate"/>
        <result property="drugCategory" column="drug_category"/>
        <result property="drugManufacturer" column="drug_manufacturer"/>
        <result property="drugStatus" column="drug_status"/>
		<result property="drugNote" column="drug_note"/>
    </resultMap>

	<select id="getList" resultType="com.basic.javaframe.entity.Sechos_Drugmaterial">
		select * from sechos_drugmaterial t <include refid="where_clause" />
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by row_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="getCount" resultType="int">
		select count(*) from sechos_drugmaterial t  <include refid="where_clause" />
	</select>

    <!-- 搜索数据区域 -->
    <sql id="where_clause">
        <where>
            1=1
            <if test="rowId != null and rowId != ''"> and t.row_id = #{rowId} </if>
    		<if test="rowIdVague != null and rowIdVague != ''"> and t.row_id like concat('%',#{rowIdVague},'%') </if>
            <if test="rowGuid != null and rowGuid != ''"> and t.row_guid = #{rowGuid} </if>
    		<if test="rowGuidVague != null and rowGuidVague != ''"> and t.row_guid like concat('%',#{rowGuidVague},'%') </if>
            <if test="createTime != null and createTime != ''"> and t.create_time = #{createTime} </if>
    		<if test="createTimeVague != null and createTimeVague != ''"> and t.create_time like concat('%',#{createTimeVague},'%') </if>
            <if test="delFlag != null and delFlag != ''"> and t.del_flag = #{delFlag} </if>
    		<if test="delFlagVague != null and delFlagVague != ''"> and t.del_flag like concat('%',#{delFlagVague},'%') </if>
            <if test="sortSq != null and sortSq != ''"> and t.sort_sq = #{sortSq} </if>
    		<if test="sortSqVague != null and sortSqVague != ''"> and t.sort_sq like concat('%',#{sortSqVague},'%') </if>
            <if test="drugName != null and drugName != ''"> and t.drug_name = #{drugName} </if>
    		<if test="drugNameVague != null and drugNameVague != ''"> and t.drug_name like concat('%',#{drugNameVague},'%') </if>
            <if test="drugCode != null and drugCode != ''"> and t.drug_code = #{drugCode} </if>
    		<if test="drugCodeVague != null and drugCodeVague != ''"> and t.drug_code like concat('%',#{drugCodeVague},'%') </if>
            <if test="drugPrice != null and drugPrice != ''"> and t.drug_price = #{drugPrice} </if>
    		<if test="drugPriceVague != null and drugPriceVague != ''"> and t.drug_price like concat('%',#{drugPriceVague},'%') </if>
			<if test="drugShelfLife != null and drugShelfLife != ''"> and t.drug_shelfLife = #{drugShelfLife} </if>
            <if test="drugCategory != null and drugCategory != ''"> and t.drug_category = #{drugCategory} </if>
    		<if test="drugCategoryVague != null and drugCategoryVague != ''"> and t.drug_category like concat('%',#{drugCategoryVague},'%') </if>
			<if test="drugManufactureDate != null and drugManufactureDate != ''"> and t.drug_manufactureDate = #{drugManufactureDate} </if>
			<if test="drugManufactureDateVague != null and drugManufactureDateVague != ''"> and t.drug_manufactureDate like concat('%',#{drugManufactureDateVague},'%') </if>
			<if test="drugExpirationDate != null and drugExpirationDate != ''"> and t.drug_expirationDate = #{drugExpirationDate} </if>
			<if test="drugExpirationDateVague != null and drugExpirationDateVague != ''"> and t.drug_expirationDate like concat('%',#{drugExpirationDateVague},'%') </if>
            <if test="drugManufacturer != null and drugManufacturer != ''"> and t.drug_manufacturer = #{drugManufacturer} </if>
    		<if test="drugManufacturerVague != null and drugManufacturerVague != ''"> and t.drug_manufacturer like concat('%',#{drugManufacturerVague},'%') </if>
            <if test="drugStatus != null and drugStatus != ''"> and t.drug_status = #{drugStatus} </if>
			<if test="drugStatusVague != null and drugStatusVague != ''"> and t.drug_status like concat('%',#{drugStatusVague},'%') </if>
			<if test="drugNote != null and drugNote != ''"> and t.drug_note = #{drugNote} </if>
			<if test=" startTime != null and startTime != '' and endTime != null and endTime != '' ">
				AND DATE_FORMAT( t.drug_expirationDate, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
			</if>
			and t.del_flag = 0
        </where>
    </sql>
	 
	<insert id="save" parameterType="com.basic.javaframe.entity.Sechos_Drugmaterial" useGeneratedKeys="true" keyProperty="rowId">
		insert into sechos_drugmaterial
		(
			`row_guid`, 
			`create_time`, 
			`del_flag`, 
			`sort_sq`, 
			`drug_name`, 
			`drug_code`, 
			`drug_price`, 
			`drug_category`, 
			`drug_manufacturer`, 
			`drug_status`,
			`drug_manufactureDate`,
			`drug_expirationDate`,
			`drug_note`,
			`drug_shelfLife`
		)
		values
		(
			#{rowGuid}, 
			#{createTime}, 
			#{delFlag}, 
			#{sortSq}, 
			#{drugName}, 
			#{drugCode}, 
			#{drugPrice}, 
			#{drugCategory}, 
			#{drugManufacturer}, 
			#{drugStatus},
			#{drugManufactureDate},
			#{drugExpirationDate},
			#{drugNote},
			#{drugShelfLife}
		)
	</insert>
	 
	<update id="update" parameterType="com.basic.javaframe.entity.Sechos_Drugmaterial">
		update sechos_drugmaterial 
		<set>
			<if test="rowGuid != null">`row_guid` = #{rowGuid}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="delFlag != null">`del_flag` = #{delFlag}, </if>
			<if test="sortSq != null">`sort_sq` = #{sortSq}, </if>
			<if test="drugName != null">`drug_name` = #{drugName}, </if>
			<if test="drugCode != null">`drug_code` = #{drugCode}, </if>
			<if test="drugPrice != null">`drug_price` = #{drugPrice}, </if>
			<if test="drugManufactureDate != null">`drug_manufactureDate` = #{drugManufactureDate}, </if>
			<if test="drugExpirationDate != null">`drug_expirationDate` = #{drugExpirationDate}, </if>
			<if test="drugCategory != null">`drug_category` = #{drugCategory}, </if>
			<if test="drugManufacturer != null">`drug_manufacturer` = #{drugManufacturer}, </if>
			<if test="drugStatus != null">`drug_status` = #{drugStatus},</if>
			<if test="drugNote != null">`drug_note` = #{drugNote},</if>
			<if test="drugShelfLife != null">`drug_shelfLife` = #{drugShelfLife},</if>
		</set>
		where row_guid = #{rowGuid}
	</update>
	
	<delete id="deleteBatch">
		update sechos_drugmaterial set `del_flag` = 1 where row_guid in 
		<foreach item="rowGuid" collection="array" open="(" separator="," close=")">
			#{rowGuid}
		</foreach>
	</delete>

	<select id="getDetailByGuid" resultType="com.basic.javaframe.entity.Sechos_Drugmaterial">
		select * from sechos_drugmaterial where row_guid =#{rowGuid} and del_flag = 0
	</select>

	<select id="getDrugCodes" resultType="com.basic.javaframe.entity.Sechos_Drugmaterial">
		select drug_code,drug_name from sechos_drugmaterial where del_flag = 0 and drug_status = 0
	</select>

	<select id="getDrugName" resultType="com.basic.javaframe.entity.Sechos_Drugmaterial">
		select row_guid,drug_price from sechos_drugmaterial where drug_code=#{drugCode} and del_flag = 0
	</select>

	<!-- 验证重复性 -->
	<select id="checkDrugCode" resultType="int">
		select count(*) from sechos_drugmaterial t<include refid="where_clause" />
	</select>


</mapper>